doctype html
html
  head
    title Customers
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    )
  body
    div.container
      div 
        a(href='/addcustomer').btn.btn-primary.mt-3.mb-3 Add customer 
      div 
        table.table.table-striped
          tbody
            each customer in customers
              tr
                td #{customer.firstname}
                td #{customer.lastname}
                td #{customer.email}
                td #{customer.phone}